<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="top|center">

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/property"
        android:layout_height="wrap_content"
        android:hint="Property..."
        android:layout_margin="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/value"
        android:layout_height="wrap_content"
        android:hint="Value..."
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Property"
        android:onClick="addProperty"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Property"
        android:onClick="updateProperty"
        android:layout_margin="10dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="WebServer"
        android:onClick="webServer"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="65dp">

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/getProperty"
            android:layout_height="wrap_content"
            android:hint="Property..."
            android:layout_margin="10dp"
            android:layout_weight="1.0"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Get Property"
            android:layout_weight="2"/>

    </LinearLayout>

</LinearLayout>
